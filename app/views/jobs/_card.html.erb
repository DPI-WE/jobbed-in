<% @list_of_jobs.each do |a_job| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= a_job.title %></h5>
      <h6 class="card-subtitle mb-2 text-body-secondary"><%= a_job.description %></h6>
      <p class="card-text"><%= a_job.deadline %>.</p>
      <%= link_to 'See posting', a_job.link, class: "card-link" %>
      <a href="/jobs/<%= a_job.id %>">Show details</a>
    </div>
  </div>
<% end %>
