<div class="container px-0 my-2">
  <div class="card">
    <div class="card-header">
      <div class="d-flex justify-content-between align-items-center">
        <h1>List of jobs</h1>

        <%= link_to new_job_path do %>
          <i class="fa-regular fa-square-plus fa-2x"></i>
        <% end %>
      </div>

      <div class="mb-2">
        <%= render "search", q: @q %>
      </div>
    </div>
    <%= render "jobs/list_group", jobs: @jobs %>
    <div class="card-footer text-body-secondary">
      <%= paginate @jobs %>
    </div>
  </div>
</div>
