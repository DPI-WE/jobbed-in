<%= form_with model: job do |form| %>

  <div class="my-2">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="my-2">
    <%= form.label :link, class: "form-label" %>
    <%= form.text_field :link, class: "form-control" %>
  </div>

  <div class="my-2">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="my-2">
    <%= form.label :category, class: "form-label" %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="my-2">
    <%= form.label :deadline, class: "form-label" %>
    <%= form.date_field :deadline, class: "form-control" %>
  </div>

  <div class="my-2">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
